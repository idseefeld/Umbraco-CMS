{
  "$schema": "./appsettings-schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Umbraco.Cms.Tests": "Information"
    },
    "Console": {
      "DisableColors": true
    }
  },
  "Tests": {
    "Database": {
      "DatabaseType": "PostgreSql", // "PostgreSql", "SqlServer", "SQLite", "LocalDb"
      "PrepareThreadCount": 2, // 4,
      "SchemaDatabaseCount": 2, // 4,
      "EmptyDatabasesCount": 1, // 2,
      "TestMasterConnectionString": "Host=localhost;Port=5433;Database=UmbracoTest-1;Username=umb;Password=umb;SSL Mode=Allow;"
      // "Host=localhost;Port=5433;Database=UmbracoTest-1;Username=umb;Password=umb;SSL Mode=Allow;"
      // "Server=.\\sql2022;Database=UmbracoTest-1;Integrated Security=true;TrustServerCertificate=true;"
    }
  },
  "Umbraco": {
    "CMS": {
      "Content": {
        "AllowedUploadedFileExtensions": [ "jpg", "png", "gif", "svg" ]
      },
      "Global": {
        //"Smtp": {
        //  "From": "your@email.here",
        //  "Host": "localhost",
        //  "Port": 25
        //}
      }
    }
  }
