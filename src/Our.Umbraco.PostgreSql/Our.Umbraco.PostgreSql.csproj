  <ItemGroup>
    <None Remove="datetime-erros.playlist" />
    <None Remove="ExecuteScalar-errors.playlist" />
    <None Remove="file-open-error.playlist" />
    <None Remove="getalias-errors.playlist" />
    <None Remove="umb.sql" />
    <None Remove="umbMain.sql" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Npgsql" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Our.Umbraco.PostgreSql.EFCore\Our.Umbraco.PostgreSql.EFCore.csproj" />
